{
  "name": "hmpps-open-layers-map",
  "version": "0.5.31",
  "description": "A native Web Component for displaying maps using OpenLayers.",
  "main": "./dist/index.js",
  "module": "./dist/index.es.js",
  "types": "./dist/types/index.d.ts",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prepare": "husky",
    "lint": "eslint . --cache --max-warnings 0",
    "lint-fix": "eslint . --cache --max-warnings 0 --fix",
    "vite": "vite",
    "watch:css": "chokidar 'src/styles/**/*.scss' -c \"npm run build:css\"",
    "build:css": "sass --no-source-map --quiet-deps --load-path=node_modules src/styles/moj-map.scss src/styles/moj-map.raw.css",
    "dev": "npm-run-all --parallel build:css watch:css vite",
    "build": "npm run build:css && BUILD=lib vite build && tsc",
    "preview": "vite preview"
  },
  "keywords": [
    "web-component",
    "openlayers",
    "map",
    "moj",
    "govuk",
    "typescript",
    "frontend",
    "geodata",
    "gis",
    "component"
  ],
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.iife.js"
    },
    "./tile-token-proxy": {
      "types": "./dist/types/scripts/tile-token-proxy/index.d.ts",
      "import": "./dist/scripts/tile-token-proxy/index.js",
      "require": "./dist/scripts/tile-token-proxy/index.js"
    }
  },
  "files": [
    "dist/",
    "nunjucks/"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.{ts,tsx,js,jsx,css,scss,njk}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@types/qs": "^6.9.18",
    "axios": "^1.9.0",
    "dotenv": "^17.2.0",
    "express": "^4.21.2",
    "ol-mapbox-style": "^13.0.1",
    "superagent": "^10.2.0"
  },
  "peerDependencies": {
    "ol": "^10.6.1"
  },
  "peerDependenciesMeta": {
    "ol": {
      "optional": false
    }
  },
  "devDependencies": {
    "@ministryofjustice/eslint-config-hmpps": "^0.0.3",
    "@types/express": "^5.0.3",
    "@types/superagent": "^8.1.9",
    "chokidar-cli": "^3.0.0",
    "govuk-frontend": "^5.11.0",
    "npm-run-all": "^4.1.5",
    "ol": "^10.6.1",
    "prettier": "^3.6.2",
    "prettier-plugin-jinja-template": "^2.1.0",
    "typescript": "^5.8.3",
    "vite": "^7.0.4",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-string": "^1.2.3",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "peerDependencies": {
    "ol": "^10.6.1",
    "govuk-frontend": ">=5"
  },
  "peerDependenciesMeta": {
    "ol": { "optional": false },
    "govuk-frontend": { "optional": false }
  }
}
